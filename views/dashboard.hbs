<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cocktail Website</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body  class="center-align">
    <h1 class="center-align">Your Favorites</h1>

    {{#if favorites}}
      <ul class="collapsible">
        {{#each favorites}}
          <li>
            <p class="collapsible-header">{{this.cocktailName}}</p>
            <div class="collapsible-body">
              {{#if this.image_url}}
                <img src="{{this.image_url}}" class="favorite-image" alt="Uploaded image">
              {{/if}}
              <p>{{this.createdAt}}</p>
              <button data-id="{{this.id}}" class="cloudinary-button upload-widget">Upload files</button>
            </div>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No favorite cocktails found.</p>
    {{/if}}
</body>


{{!-- Cloudinary stuff --}}
<script src="https://upload-widget.cloudinary.com/global/all.js" type="text/javascript"></script>  
<script type="text/javascript">  
let favorite_id;
var myWidget = cloudinary.createUploadWidget({
    cloudName: 'djomeywuu', 
    uploadPreset: 'ecup6hng'
  }, (error, result) => { 
    if (!error && result && result.event === "success") { 
      console.log('Done! Here is the image info: ', result.info); 
      // fetch PUT request to update the favorite in the db, using the favorite_id above
      // The body would contain a url which would come from result.info.url  
      fetch(`/api/favorites/${favorite_id}`, {
          method: 'PUT',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify({ image_url: result.info.url  })
      })
        .then(response => response.json())
        .then(data => {
            window.location.reload();
        })
        .catch(error => {
            console.error('Error:', error);
        });
  }
  }
)

document.addEventListener('click', e => {
  const el = e.target;
  if (el.classList.contains('upload-widget')) {
    favorite_id = el.dataset.id;
    myWidget.open();
  }
})
</script>

</html>