<div class="row login-page">
    <div class="col s12 m6 offset-m3">
        <div class="card register-card">
            <div class="card-content mt">
                <form action="/login" method="POST">
                    <h3 class="center-align">Login</h3>

                    <input name="userName" type="text" placeholder="Please enter your username">
                    <input id="password" name="password" type="password" placeholder="Please enter your password">
                     <div id="show-password">
                        <label class="show-password">
                            <input id="showPassword" type="checkbox" class="filled-in checkbox-blue"
                                onclick="togglePasswordVisibility()">
                            <span>Show Password</span>
                        </label>
                    </div>

                    <button id="action-button" class="waves-effect waves-light btn-small blue darken-3">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container center-align" id="login-redirect">
    <p class="signup-text">Need to create an account?</p>
    <a class="signup-text" href="/register">Click here to register</a>
</div>