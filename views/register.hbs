<div class="row">
    <div class="col s12 m6 offset-m3">
        <div class="card register-card">
            <div class="card-content">
                <form class="" action="/register" method="POST">
                    <h3 class="center-align">Sign up</h3>

                    <input class="" name="userName" type="text" placeholder="Please enter your username">
                    <input id="password" class="" name="password" type="password"
                        placeholder="Please enter your password">
                    <div id="show-password">
                        <label class="show-password">
                            <input id="showPassword" type="checkbox" class="filled-in checkbox-blue"
                                onclick="togglePasswordVisibility()">
                            <span>Show Password</span>
                        </label>
                    </div>
                    <button id="action-button" class="waves-effect waves-light btn-small blue darken-3">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container center-align" id="login-redirect">
    <p class="">Already have an account?</p>
    <a class="" href="/login">Click here to login</a>
</div>